---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title = 'Fragments & Flows',
  description = "Fragments & Flows is Aris Goudouras' personal webpage and digital garden",
  image = 'https://fragmentsandflows.com/fragments-and-flows-1200x630.png',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Spectral:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import 'tailwindcss';

  @theme {
    --font-sans: 'Noto Sans', sans-serif;
    --font-serif: 'Spectral', serif;
    --font-mono: 'Fira Code', monospace;

    --color-indigo-50: #f3f3ff;
    --color-indigo-100: #e9e8ff;
    --color-indigo-200: #d3d3ff;
    --color-indigo-300: #b6b3ff;
    --color-indigo-400: #9288fd;
    --color-indigo-500: #7d7ddb;
    --color-indigo-600: #6860cb;
    --color-indigo-700: #5950b2;
    --color-indigo-800: #494390;
    --color-indigo-900: #3e3b74;
    --color-indigo-950: #262343;
  }

  html {
    font-family: 'Noto Sans', sans-serif;
    font-optical-sizing: auto;
  }
  body {
    margin: 0;
    background-color: #f9f9f7;
  }
</style>
