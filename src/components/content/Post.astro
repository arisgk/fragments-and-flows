---
import { type Post, getDisplayDate, isInternalPost } from '../../models/post';

interface Props {
  post: Post;
  size: 'small' | 'normal';
}

const { post, size } = Astro.props;
---

<div class="flex flex-col items-center sm:items-start gap-2">
  <div class="flex items-center gap-3">
    <p class="text-xs md:text-sm text-black/75">
      {getDisplayDate(post)}
    </p>
  </div>

  <a href={isInternalPost(post) ? `/garden/${post.slug}` : post.url}
    ><h3
      class={size === 'normal'
        ? 'text-xl sm:text-2xl md:text-3xl text-center sm:text-left font-serif font-bold'
        : 'text-lg md:text-[1.375rem] text-center sm:text-left font-serif font-bold'}
    >
      {post.title}
    </h3></a
  >
  <p
    class={size === 'normal'
      ? 'text-base/7 md:text-lg/8 text-justify text-black font-light'
      : 'text-sm/6 text-black text-justify font-light'}
  >
    {post.description}
  </p>
</div>
